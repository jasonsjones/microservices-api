{
  "name": "microservices-api",
  "version": "1.0.0",
  "description": "A sandbox API built on microservices",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/**/*test.js",
      "src/**/*.routes.js",
      "src/utils/*.js",
      "src/config",
      "src/graphql",
      "src/dbSeed.js",
      "src/server.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "predev": "npm run dbSeed",
    "dev": "nodemon src/server.js --inspect=0.0.0.0:5858 --watch src/ --exec babel-node",
    "clean": "rm -rf .v8flags*",
    "dbSeed": "babel-node src/utils/dbSeed.js",
    "security-check": "nsp check",
    "lt": "lt --port 3000 --subdomain sandboxapi",
    "lint": "eslint webpack.config.js src/**/*.js src/*.js",
    "test:unit": "DEBUG=test nodemon --exec 'nyc mocha --exit --reporter landing src/utils/testSetup.js src/**/*.test.js --require babel-register'",
    "_test:acceptance": "nodemon --exec 'mocha --exit src/utils/dbTestSetup.js src/**/*.a-test.js --require babel-register'",
    "_test:integration": "nodemon --exec 'mocha --exit src/utils/dbTestSetup.js src/**/*.i-test.js --require babel-register'",
    "_test:a-i": "nodemon --exec 'mocha --exit src/utils/dbTestSetup.js src/**/*.*-test.js --require babel-register'",
    "_test:all": "nyc mocha --exit src/utils/dbTestSetup.js src/**/*.*test.js --require babel-register",
    "up:dev": "docker-compose up node-server",
    "up:test-acceptance": "docker-compose up node-test",
    "up:test-integration": "docker-compose run --rm node-test yarn _test:integration",
    "up:test-a-i": "docker-compose run --rm node-test yarn _test:a-i",
    "up:test-all": "docker-compose run --rm node-test yarn _test:all",
    "down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonsjones/microservices-api.git"
  },
  "keywords": [
    "node",
    "api",
    "microservices"
  ],
  "author": "Jason Jones",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonsjones/microservices-api/issues"
  },
  "homepage": "https://github.com/jasonsjones/microservices-api#readme",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-graphql": "^0.6.7",
    "express-session": "^1.15.5",
    "graphql": "^0.10.5",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.11.3",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "node-fetch": "^1.7.2",
    "passport": "^0.4.0",
    "passport-forcedotcom": "^0.1.4",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.1",
    "debug": "^3.0.0",
    "eslint": "^4.4.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "localtunnel": "^1.8.3",
    "mocha": "^4.0.0",
    "nodemon": "^1.11.0",
    "nsp": "^3.1.0",
    "nyc": "^11.3.0",
    "sinon": "4.1.3",
    "sinon-mongoose": "^2.0.2",
    "supertest": "^3.0.0"
  }
}
