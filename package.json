{
    "name": "microservices-api",
    "version": "0.2.9",
    "description": "A sandbox API built on microservices",
    "nyc": {
        "exclude": [
            "src/**/*test.js",
            "src/**/*.routes.js",
            "src/utils/*.js",
            "src/config",
            "src/graphql",
            "src/server.js"
        ],
        "sourceMap": false,
        "instrument": false
    },
    "scripts": {
        "build": "babel src -d build",
        "predev": "npm run dbSeed",
        "dev": "NODE_ENV=development DEBUG=db*,app nodemon src/server.js --inspect=0.0.0.0:5858 --watch src/ --exec babel-node",
        "clean": "rm -rf .v8flags* uploads/* build",
        "dbSeed": "babel-node src/utils/dbSeed.js",
        "security-check": "nsp check",
        "lt": "lt --port 3000 --subdomain sandboxapi",
        "lint": "eslint src/**/*.js src/*.js",
        "test:unit:all": "DEBUG=test nyc mocha --exit --reporter landing src/utils/testSetup.js src/**/*.test.js",
        "test:unit:avatar": "DEBUG=test nodemon --exec 'mocha src/utils/testSetup.js src/avatar/*.test.js'",
        "test:unit:common": "DEBUG=test nodemon --exec 'mocha src/utils/testSetup.js src/common/*.test.js'",
        "test:unit:user": "DEBUG=test nodemon --exec 'mocha src/utils/testSetup.js src/user/*.test.js'",
        "test:acceptance": "NODE_ENV=test DEBUG=db:connection,test mocha --exit src/utils/dbTestSetup.js src/**/*.a-test.js",
        "test:integration": "NODE_ENV=test DEBUG=db:connection,test mocha --exit src/utils/dbTestSetup.js src/**/*.i-test.js",
        "test:a-i": "npm run test:integration -s && npm run test:acceptance -s",
        "test:all": "NODE_ENV=test DEBUG=db:connection,test nyc mocha --exit src/utils/dbTestSetup.js src/**/*.*test.js",
        "up:dev": "docker-compose up node-server",
        "up:test:acceptance": "docker-compose up node-test",
        "up:test:integration": "docker-compose run --rm node-test yarn test:integration",
        "up:test:a-i": "docker-compose run --rm node-test yarn test:a-i",
        "up:test:all": "docker-compose run --rm node-test yarn test:all",
        "down": "docker-compose down"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jasonsjones/microservices-api.git"
    },
    "keywords": [
        "node",
        "api",
        "microservices"
    ],
    "author": "Jason Jones",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jasonsjones/microservices-api/issues"
    },
    "homepage": "https://github.com/jasonsjones/microservices-api#readme",
    "dependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-stage-2": "^6.24.1",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.17.2",
        "cors": "^2.8.4",
        "debug": "^3.0.0",
        "dotenv": "^6.0.0",
        "ejs": "^2.5.7",
        "express": "^4.15.3",
        "express-graphql": "^0.6.7",
        "express-session": "^1.15.5",
        "graphql": "^0.13.1",
        "jsonwebtoken": "^8.2.0",
        "mongoose": "^5.0.0",
        "morgan": "^1.8.2",
        "multer": "^1.3.0",
        "node-fetch": "^2.1.0",
        "nodemailer": "^4.6.7",
        "passport": "^0.4.0",
        "passport-forcedotcom": "^0.1.4",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.2",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-register": "^6.24.1",
        "chai": "^4.1.1",
        "eslint": "^5.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "mocha": "^5.0.0",
        "nodemon": "^1.11.0",
        "nsp": "^3.1.0",
        "nyc": "^12.0.0",
        "prettier": "^1.12.1",
        "sinon": "^6.1.0",
        "sinon-mongoose": "^2.0.2",
        "supertest": "^3.0.0"
    }
}
